# Native macOS Database Configuration
# Databases được cài trực tiếp trên macOS (không Docker)
NODE_ENV=development

# API Service Ports
API_GATEWAY_PORT=3000
TRANSACTION_SVC_PORT=3001
ACCOUNT_SVC_PORT=3002

# PostgreSQL (Native macOS Installation)
# Default PostgreSQL trên macOS thường chạy port 5432
TRANSACTION_DB_HOST=localhost
TRANSACTION_DB_PORT=5432
TRANSACTION_DB_NAME=transaction_db
TRANSACTION_DB_USERNAME=postgres
TRANSACTION_DB_PASSWORD=postgres

# MongoDB (Native macOS Installation)  
# Default MongoDB trên macOS thường chạy port 27017
ACCOUNT_DB_HOST=localhost
ACCOUNT_DB_PORT=27017
ACCOUNT_DB_NAME=account_db
ACCOUNT_DB_USERNAME=admin
ACCOUNT_DB_PASSWORD=admin123
# MongoDB URI cho authentication
MONGODB_URI=mongodb://admin:admin123@localhost:27017/account_db?authSource=admin

# MySQL (Native macOS Installation)
# Default MySQL trên macOS thường chạy port 3306
GATEWAY_DB_HOST=localhost
GATEWAY_DB_PORT=3306
GATEWAY_DB_NAME=gateway_db
GATEWAY_DB_USERNAME=root
GATEWAY_DB_PASSWORD=root

# Service Communication URLs
TRANSACTION_SERVICE_URL=http://localhost:3001
ACCOUNT_SERVICE_URL=http://localhost:3002

# Development Flags
DROP_SCHEMA=true